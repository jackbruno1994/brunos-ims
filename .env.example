# ===========================================
# Bruno's IMS Environment Configuration
# ===========================================

# Application Environment
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/brunos_ims
DB_HOST=localhost
DB_PORT=5432
DB_NAME=brunos_ims
DB_USERNAME=username
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ISSUER=brunos-ims
JWT_AUDIENCE=brunos-ims-users

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
AES_ALGORITHM=aes-256-gcm
KEY_DERIVATION_ITERATIONS=100000

# Session Configuration
SESSION_SECRET=your-session-secret-key-here-change-in-production
SESSION_COOKIE_MAX_AGE=900000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=uploads/

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=brunos-ims@example.com

# External API Keys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Weather API (for supply chain insights)
WEATHER_API_KEY=your-weather-api-key

# Third-party Integrations
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Security Configuration
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800000

# Audit Logging
AUDIT_LOG_LEVEL=info
AUDIT_LOG_MAX_FILES=10
AUDIT_LOG_MAX_SIZE=10485760

# Performance Configuration
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_SESSION=900

# Development Tools (dev environment only)
DEBUG=brunos-ims:*
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/brunos_ims_test
TEST_REDIS_URL=redis://localhost:6379/1

# Production Optimizations (production environment only)
ENABLE_COMPRESSION=true
ENABLE_STATIC_CACHE=true
STATIC_CACHE_MAX_AGE=31536000
ENABLE_CLUSTERING=false
CLUSTER_WORKERS=auto

# Docker Configuration
DOCKER_DB_HOST=postgres
DOCKER_REDIS_HOST=redis

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=brunos-ims-backups
BACKUP_S3_REGION=us-east-1

# SSL Configuration (production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem
SSL_CA_PATH=/path/to/ssl/ca-bundle.pem

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MULTI_LOCATION=false
FEATURE_POS_INTEGRATION=false
FEATURE_MOBILE_APP=false

# ===========================================
# Security Notes:
# - Change all default passwords and secrets
# - Use strong, unique values for production
# - Never commit this file with real values
# - Use environment-specific .env files
# - Consider using a secrets management service
# ===========================================